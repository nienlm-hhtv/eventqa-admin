<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:id="@+id/evlistitem_img"
                android:src="@drawable/side_nav_bar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Verryyyyyy longggg and logggggggg Medium Text"
                android:id="@+id/evlistitem_name"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/evlistitem_img"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/evlistitem_btnedit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/evlistitem_btnedit"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/evlistitem_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/evlistitem_btnview"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/evlistitem_btnedit"
                android:layout_toStartOf="@+id/evlistitem_btnedit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:id="@+id/evlistitem_status"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/evlistitem_btnview"
                android:layout_alignLeft="@+id/evlistitem_name"
                android:layout_alignStart="@+id/evlistitem_name"
                android:layout_toLeftOf="@+id/evlistitem_btnview"
                android:layout_toStartOf="@+id/evlistitem_btnview" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>